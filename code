<body>
  <div id="app"></div>
  <script>
    const app = document.getElementById('app');
    let currentScreen = 0;
    const photos = [
      'photo0.jpg', 'photo1.jpg', 'photo2.jpg', 'photo3.jpg', 'photo4.jpg',
      'photo5.jpg', 'photo6.jpg', 'photo7.jpg', 'photo8.jpg', 'photo9.jpg', 'photo10.jpg'
    ];

    function render() {
      if (currentScreen === 0) {
        app.innerHTML = `
          <div class="screen active">
            <h1>Ahoj K치ja! 游눗</h1>
            <p>Mal치 hra jen pro n치s... P콏ipraven치 na vzpom칤nky?</p>
            <img src="${photos[0]}" alt="My">
            <div class="buttons">
              <button onclick="nextScreen()">Dal코칤</button>
            </div>
          </div>
        `;
      } else if (currentScreen === 10) {
        app.innerHTML = `
          <div class="screen active">
            <h1>Jupi! 游땘</h1>
            <p>Jasn캩 쬰 bude코 moje Valent칳nka! Miluju t캩. Oslavime spolu. 游눘</p>
            <img src="${photos[10]}" alt="Nav쬯y">
            <p style="font-size:1rem;opacity:0.8;">(Obnov str치nku pro restart)</p>
          </div>
        `;
      } else {
        const isFinalGamePage = currentScreen === 9;
        const yesScaleClass = currentScreen > 0 ? 'big-yes' : '';
        app.innerHTML = `
          <div class="screen active">
            <h1>Chce코 b칳t moje Valent칳nka? 游눟</h1>
            <img src="${photos[currentScreen]}" alt="My">
            <div class="buttons">
              <button class="yes ${yesScaleClass}" onclick="goToOutro()">Ano 仇벒잺</button>
              ${!isFinalGamePage ? '<button class="no" onclick="nextScreen()">Ne 游땩</button>' : ''}
            </div>
          </div>
        `;
      }
    }

    function nextScreen() { currentScreen++; render(); }
    function goToOutro() { currentScreen = 10; render(); }
    render();
  </script>
