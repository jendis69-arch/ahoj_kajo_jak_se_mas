<body>
  <div id="app"></div>
  <script>
    const app = document.getElementById('app');
    let currentScreen = 0; // 0=welcome, 1-9=game pages, 10=outro

    const photos = [
      'IMG_1333.JPG',  // Welcome
      'IMG_1352.JPG',  // Page 1
      'IMG_1384.JPG',  // Page 2
      'IMG_4447.JPG',  // Page 3
      'IMG_4496.JPG',  // Page 4
      'IMG_5870.JPG',  // Page 5
      'IMG_7952.jpeg',  // Page 6
      'IMG_7992.jpeg',  // Page 7
      'IMG_8200.jpg',  // Page 8
      '.jpg',  // Page 9 (both yes)
      'photo10.jpg'  // Outro
    ];

    function render() {
      if (currentScreen === 0) {
        app.innerHTML = `
          <div class="screen active">
            <h1>Welcome, K√°ja! üíï</h1>
            <p>A little game just for us... Ready for some fun memories?</p>
            <img src="${photos[0]}" alt="Us">
            <div class="buttons">
              <button onclick="nextScreen()">Next</button>
            </div>
          </div>
        `;
      } else if (currentScreen === 10) {
        app.innerHTML = `
          <div class="screen active">
            <h1>Yay! üòç</h1>
            <p>Of course you'll be my Valentine! I love you so much. Let's celebrate together. üíñ</p>
            <img src="${photos[10]}" alt="Us forever">
            <p style="font-size: 1rem; opacity: 0.8;">(Reload page to play again)</p>
          </div>
        `;
      } else {
        const isFinalGamePage = currentScreen === 9;
        const yesScaleClass = currentScreen > 0 ? 'big-yes' : '';
        app.innerHTML = `
          <div class="screen active">
            <h1>Will you be my Valentine? üíù</h1>
            <img src="${photos[currentScreen]}" alt="Us">
            <div class="buttons">
              <button class="yes ${yesScaleClass}" onclick="goToOutro()">Yes ‚ù§Ô∏è</button>
              ${!isFinalGamePage ? `<button class="no" onclick="nextScreen()">No üò¢</button>` : ''}
            </div>
          </div>
        `;
      }
    }

    function nextScreen() {
      currentScreen++;
      render();
    }

    function goToOutro() {
      currentScreen = 10;
      render();
    }

    // Start the game
    render();
  </script>
